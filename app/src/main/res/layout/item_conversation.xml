<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_other_head"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tv_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/iv_other_head"
            android:maxWidth="250dp"
            android:padding="8dp"
            android:text="https://yc.xicaishe.com/questions?id=570642058136015780"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_other"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/iv_mine_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_mine_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@id/iv_mine_head"
            android:maxWidth="250dp"
            android:padding="8dp"
            android:text="https://yc.xicaishe.com/questions?id=570642058136015780"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>