<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.questionbankactivitys.SimultionResultActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/simulation_result_shape">

        <RelativeLayout
            android:id="@+id/rl_left_out"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/left_arrow_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:layout_toEndOf="@id/rl_left_out"
            android:gravity="center"
            android:text="智能刷题结果分析"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <com.example.yichengxuetang.utils.ArcProgressBar2
            android:id="@+id/cpv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/rl_left_out"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_marginTop="-5dp"
        android:background="@drawable/music_list_shape">

        <RelativeLayout
            android:id="@+id/rl_tinum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:background="#FFF2E2">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="36"
                    android:textColor="#fffe8000"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/tv_error_ti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="21"
                    android:textColor="#fffe8000"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#fffe8000"
                    android:textSize="29sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="本次答题数"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的错题"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="练习时间"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_exercise_other"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/rl_tinum"
            android:layout_marginStart="51dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/login_phone_shape"
            android:gravity="center"
            android:text="再次刷题"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_find_error_questioin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tv_exercise_other"
            android:layout_marginStart="51dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/normal_shape"
            android:gravity="center"
            android:text="查看错题"
            android:textColor="#FE8000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>