<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/point"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/point_shape" />

    <TextView
        android:id="@+id/tv_xb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="80dp"
        android:text="早课：学习财富技能，通达美好未来"
        android:textColor="#ff939393"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_xb_title"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:drawablePadding="5dp"
        android:text="38.2万人学过"
        android:textColor="#ffb3b3b3"
        android:textSize="12sp"
        app:drawableStartCompat="@mipmap/pople" />

    <TextView
        android:id="@+id/tv_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:text="已学习"
        android:textColor="#ffc7c7c7"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_unlock"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="31dp"
        android:src="@mipmap/unlock" />

</RelativeLayout>