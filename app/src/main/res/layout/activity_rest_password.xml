<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.logins.RestPasswordActivity">

    <ImageView
        android:id="@+id/left_out"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="31dp"
        android:contentDescription="@string/todo"
        android:src="@mipmap/left_out" />

    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_out"
        android:layout_marginStart="27dp"
        android:layout_marginTop="37dp"
        android:text="@string/reset_password"
        android:textColor="#ff212121"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tv_login_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_register"
        android:layout_marginStart="27dp"
        android:layout_marginTop="3dp"
        android:text="@string/change_password_tips"
        android:textColor="#ff9e9e9e"
        android:textSize="13sp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_vc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_tips"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="34dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/password_rule"
        android:inputType="textPassword"
        android:paddingStart="@dimen/dp_10"
        android:paddingBottom="11dp"
        app:met_hideUnderline="true" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ed_vc_code"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:background="#E0E0E0" />


    <ImageView
        android:id="@+id/iv_see"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_below="@id/tv_login_tips"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="41dp"
        android:src="@mipmap/see_password" />

    <TextView
        android:id="@+id/tv_reset_password_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/ed_vc_code"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/unlogin_shape"
        android:gravity="center"
        android:text="@string/make_sure"
        android:textColor="#ffffffff"
        android:textSize="18sp" />


</RelativeLayout>