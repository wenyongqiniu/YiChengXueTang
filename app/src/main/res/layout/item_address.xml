<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_address">

    <TextView
        android:id="@+id/tv_default"
        android:gravity="center"
        android:background="@drawable/default_shape"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_width="31dp"
        android:layout_height="14dp"
        android:text="默认"
        android:textColor="#fffe6000"
        android:textSize="10sp"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_is_default"
        android:background="@mipmap/select_addreaa"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_is_default"
        android:id="@+id/tv_address_item"
        android:layout_marginTop="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="41dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="望京慧谷时空（望京地铁站北）望京西园218楼1060"
        android:textColor="#ff2a2a2a"
        android:textSize="16sp"
        />

    <TextView
        android:layout_toEndOf="@+id/iv_is_default"
        android:id="@+id/tv_name_phone_item"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tv_address_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汪洋     139****4951"
        android:textColor="#ff545454"
        android:textSize="12sp"
        />
    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/iv_edit_address"
        android:background="@mipmap/edit_address"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <View
        android:layout_marginTop="18dp"
        android:layout_below="@id/tv_name_phone_item"
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>