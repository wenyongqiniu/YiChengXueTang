<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    android:layout_marginBottom="18dp"
    android:id="@+id/rl_note"
    android:background="@drawable/note_shape">

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:text="2.1 把钱花在对的地方，就能钱生钱"
        android:textColor="#ff3d3d3d"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_note"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_note_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#F3F3F3" />


    <TextView
        android:id="@+id/tv_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_note"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="17dp"
        android:text="听了非常受益，对理财有了新认识！"
        android:textColor="#ff1a1a1a"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_note_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_note_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="2020-02-20 22:10:56"
        android:textColor="#ff717171"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_delete_note"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:layout_below="@id/tv_note_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/delete_shape"
        android:gravity="center"
        android:text="删除 "
        android:textColor="#FE8000"
        android:textSize="10sp" />
</RelativeLayout>