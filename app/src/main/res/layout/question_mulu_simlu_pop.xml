<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_list_shape">

    <TextView
        android:id="@+id/tv_count_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:text="倒计时：0"
        android:textColor="#2A2A2A"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_mulu_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:drawablePadding="7dp"
        android:text="已答"
        android:textColor="#ff2a2a2a"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableStartCompat="@mipmap/done_simlu" />

    <TextView
        android:id="@+id/tv_mulu_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@id/tv_mulu_right"
        android:drawablePadding="7dp"
        android:text="未答"
        android:textColor="#ff2a2a2a"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableStartCompat="@mipmap/mulu_empty" />

    <View
        android:id="@+id/view_e"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_mulu_right"
        android:layout_marginTop="16dp"
        android:background="#F3F3F3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mulu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_e"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="8dp" />



</RelativeLayout>